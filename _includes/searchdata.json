
[
  {% assign comma = false %}
  {% for page in site.pages %}
    {% if page.hidden == nil or page.hidden == false %}
      {% if page.title != nil and page.language != nil %}
        {% if page.language == include.language %}
          {% if comma == true %}
            ,
          {% endif %}
          {
            "title"    : "{{ page.title | escape }}",
            "category" : "{{ page.category }}",
            "category_path": "{{ page.category_path }}",
            "app_version": "{{ page.app_version }}",
            "tags"     : "{{ page.tags | join: ', ' }}",
            "url"      : "{{ site.baseurl }}{{ page.url }}",
            "date"     : "{{ page.date }}"
          }
          {% assign comma = true %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
]
